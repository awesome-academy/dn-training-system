<% provide :title, t("subject.create_subject") %>
<h1><%= t("subject.create_subject").upcase %></h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
  <%= form_for(@subject) do |f| %>
    <%= render "shared/error_messages", object: @subject %>
    <%= f.label t("subject.name_subject") %>
    <%= f.text_field :name_subject, class: "form-control" %>
    <%= f.label t("subject.description") %>
    <%= f.text_field :description, class: "form-control" %>
    <%= f.label t("subject.total_date_lean") %>
    <%= f.text_field :total_date_lean, class: "form-control" %>
    <%= f.label t("subject.start_date_learn") %>
    <%= f.date_field :start_date_learn, as: :date, value: f.object.try(:strftime, "%m/%d/%Y"), class: "form-control" %>
    <%= f.submit t("subject.create_subject"), class: "btn btn-primary" %>
  <% end %>
</div>
</div>
