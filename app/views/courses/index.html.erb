<% provide(:title, t("course.list_course")) %>
<h1><%= t("course.list_course") %></h1>
 <%= link_to t("course.create"), new_course_path %>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t("course.name_course") %></th>
      <th><%= t("course.description_course") %></th>
      <th><%= t("course.start_date_course") %></th>
      <th><%= t("course.due_date_course") %></th>
      <th><%= t("course.status") %></th>
      <th><%= t("course.action") %></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course_path(course.id) %></td>
        <td><%= course.description %></td>
        <td><%= l(course.start_date.to_date, format: :default) %></td>
        <td><%= l(course.due_date.to_date, format: :default) %></td>
        <td><%= course.status %></td>
        <td><%= link_to t("course.edit"), edit_course_path(course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @courses, theme: "twitter-bootstrap-3" %>
